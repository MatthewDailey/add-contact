<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
    <LinearLayout android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:layout_marginBottom="58dp"
        android:layout_height="45dp" android:layout_width="200dp"
        android:id="@+id/lin_progress_bar" >

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/TextView01" android:layout_height="fill_parent"
            android:layout_width="fill_parent" android:gravity="center_vertical"
            android:textStyle="bold" android:text="@string/loading"
            android:layout_marginLeft="10dp" android:textSize="23dp"
            android:textColor="#808080"></TextView>
    </LinearLayout>
</RelativeLayout>